
<h1 class="page-header">Categorias</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    Lista das categorias
    <%= link_to  new_backoffice_category_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <!-- /.panel-heading -->
  <div class="panel-body">
      <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
              <thead>
                  <tr>
                      <th>#</th>
                      <th>Descrição</th>
                      <th>Criado em</th>
                      <th>Última atualização</th>
                      <th width="80px">Editar</th>
                      <th width="80px">Excluir</th>
                  </tr>
              </thead>
              <tbody>
                  <% @categories.each do |item| %>
                      <tr>
                          <td><%= item.id %></td>
                          <td><%= item.description %></td>
                          <td><%= item.created_at.to_s(:ad) %></td>
                          <td><%= item.updated_at.to_s(:ad) %></td>
                          <td>
                            <%= link_to edit_backoffice_category_path(item.id), class: "btn btn-info btn-circle" do %>
                              <i class="fa fa-edit"></i>
                            <% end %>
                          </td>
                          <td>
                            <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-minus"></i></button>
                          </td>
                      </tr>
                  <% end %>  
              </tbody>
          </table>
      </div>
  </div>
      <!-- /.table-responsive -->
